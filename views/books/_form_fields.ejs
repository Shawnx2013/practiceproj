<div>
    <label for="title">Title</label>
    <input required id="title" type="text" name="title" value="<% book.title %>">
</div>

<div>
    <label for="author">Author</label>
    <select id="author" name="author">
            <% authors.forEach(author => { %>
                    <% if(author.id === book.author) { %>
                            <option selected label="<%= author.name %>" value="<%= author.id %>"></option>
                    <% } else { %>
                            <option label="<%= author.name %>" value="<%= author.id %>"></option>
                    <% } %>
            <% }) %>
    </select>
</div>

<div>
    <label for="publishDate">Publish Date</label>
    <input required id="publishDate" type="date" name="publishDate"
           value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>">
</div>

<div>
    <label for="pageCount">Page Count</label>
    <input required id="pageCount" type="number" name="pageCount" min="1" value="<%= book.pageCount%>">
</div>

<div>
    <label for="cover">Cover</label>
    <input id="cover" type="file" name="cover" accept="image/*" class="filepond">
</div>

<div>
    <label for="description">Description</label>
    <textarea id="description" name="description"><%= book.description %></textarea>
</div>
